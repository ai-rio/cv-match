#!/usr/bin/env sh

echo "ğŸ§ª Running pre-push checks..."

# Frontend TypeScript type checking
if [ -d "frontend" ]; then
    echo "ğŸ“ Running TypeScript type checking..."
    cd frontend
    bun run type-check || {
        echo "âŒ TypeScript type checking failed"
        exit 1
    }
    cd ..
fi

# Frontend ESLint check (warnings allowed)
if [ -d "frontend" ]; then
    echo "ğŸ” Running ESLint..."
    cd frontend
    bun run lint || echo "âš ï¸  ESLint found warnings (not blocking)"
    cd ..
fi

# Backend Python linting
if [ -d "backend" ]; then
    echo "ğŸ Running Python linting..."
    cd backend
    uv run ruff check . || echo "âš ï¸  Ruff found issues (not blocking)"
    cd ..
fi

# Backend Python type checking (informational only)
if [ -d "backend" ]; then
    echo "ğŸ Running Python type checking..."
    cd backend
    if [ -f "pyproject.toml" ]; then
        uv run mypy app/ --ignore-missing-imports --explicit-package-bases || echo "âš ï¸  Mypy found issues (not blocking)"
    fi
    cd ..
fi

echo "âœ… All pre-push checks completed!"
echo "ğŸš€ Pushing to remote..."
