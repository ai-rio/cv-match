{
  "mcpServers": {
    "context7": {
      "type": "streamable-http",
      "url": "https://mcp.context7.com/mcp",
      "alwaysAllow": []
    },
    "sequentialthinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "brave-search": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-brave-search"
      ],
      "env": {
        "BRAVE_API_KEY": "ctx7sk-f64eb40b-2d19-4b35-88c6-378b06364062"
      }
    },
    "chrome-devtools": {
      "command": "bunx",
      "args": [
        "-y",
        "chrome-devtools-mcp@latest"
      ],
      "alwaysAllow": [
        "new_page",
        "list_pages"
      ]
    },
    "tailwindcss-server": {
      "command": "npx",
      "args": [
        "-y",
        "tailwindcss-mcp-server"
      ],
      "alwaysAllow": [
        "get_tailwind_config_guide",
        "search_tailwind_docs",
        "get_tailwind_utilities"
      ]
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/home/carlos/projects"
      ]
    },
    "fetch": {
      "command": "bunx",
      "args": [
        "mcp-fetch-server"
      ],
      "env": {
        "DEFAULT_LIMIT": "50000"
      }
    }
  }
}